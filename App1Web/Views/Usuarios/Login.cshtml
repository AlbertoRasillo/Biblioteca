
@model App1Web.Models.Usuarios

@{
    ViewBag.Title = "Iniciar sesión";
}

<h2>@ViewBag.Title.</h2>

<div class="col-md-8">
    <section id="loginForm">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h4>Utilice sus datos de acceso para acceder al sistema.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => Model.usuario, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => Model.usuario, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => Model.usuario, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => Model.contraseña, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => Model.contraseña, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => Model.contraseña, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Iniciar sesión" class="btn btn-default" />
                    </div>
                </div>


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
        }

